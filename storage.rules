rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Crop images - users can upload their own images
    match /crop-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audio files - users can upload and read their own audio
    match /audio/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // TTS audio files - readable by all authenticated users
    match /tts-audio/{allPaths=**} {
      allow read: if request.auth != null;
    }
    
    // Public assets - readable by all
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}
